{
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "dist"
  },
  "files": ["src/index.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
